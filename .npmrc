# Use node-linker=hoisted for better compatibility with React Native/Expo
node-linker=hoisted

# Explicitly hoist React Native and Expo native modules to the root
# This is crucial for native modules like react-native-reanimated to work properly
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-navigation/*

# Auto install peers to avoid dependency issues
auto-install-peers=true

# Strict peer dependencies can cause issues with Expo
strict-peer-dependencies=false
